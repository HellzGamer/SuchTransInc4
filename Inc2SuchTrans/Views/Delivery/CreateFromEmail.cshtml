@model Inc2SuchTrans.Models.Delivery

@{ 

}


        <h4 style="font-size:300%; text-decoration:underline; text-align:center;">Book A Delivery With Us</h4>
<h4 style="text-align:center;">Enter the Details Below</h4>
@{ Html.RenderPartial("_Alerts"); }
@using (Html.BeginForm()) 
{
    
    <div class="form-horizontal FilterDiv">
        <hr />

        <table class="BookingTable">
            <tr>
                <td>
            @Html.LabelFor(model => model.DeliveryDate, htmlAttributes: new { @class = "control-label col-md-2 Column1" })
                </td>
                <td>
                @Html.TextBoxFor(model => model.DeliveryDate, new { type = "date" })
                </td>
            </tr>
            <tr>
                <td>
            @Html.LabelFor(model => model.PickUpArea, htmlAttributes: new { @class = "control-label col-md-2 Column1" })
                </td>
                <td>
                @Html.DropDownList("PickUpArea", "Select a Pick Up Area")
                </td>
            </tr>
            <tr>
                <td>
            @Html.LabelFor(model => model.DropOffArea, htmlAttributes: new { @class = "control-label col-md-2 Column1" })
                </td>
                <td>
                @Html.DropDownList("DropOffArea", "Select a Drop Off Area")
                </td>
            </tr>
            <tr>
                <td>
            @Html.LabelFor(model => model.DropOffAdd, htmlAttributes: new { @class = "control-label col-md-2 Column1" })
                </td>
                <td>
                @Html.EditorFor(model => model.DropOffAdd, new { htmlAttributes = new { @class = "form-control" } })
                </td>
            </tr>
            <tr>
                <td>
            @Html.LabelFor(model => model.CargoSize, htmlAttributes: new { @class = "control-label col-md-2 Column1" })
                </td>
                <td>
                @Html.DropDownListFor(model => model.CargoSize, new SelectList(new List<Object> { new {value=6, text="6m"},
                                                                                new {value=12, text="12m"}
                                                                                },
                                                      "value", "text"))
                </td>
            </tr>
            <tr>
                <td>
            @Html.LabelFor(model => model.CargoWeight, htmlAttributes: new { @class = "control-label col-md-2 Column1" })
                </td>
                <td>
                @Html.EditorFor(model => model.CargoWeight, new { htmlAttributes = new { @class = "form-control" } })
                </td>
            </tr>
        </table>


                <input type="submit" value="Create" style="margin-left:auto; margin-right:auto; background-color:lightblue;" />
            
    </div>
}

