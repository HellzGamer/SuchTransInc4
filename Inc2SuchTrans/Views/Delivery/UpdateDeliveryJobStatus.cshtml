@model Inc2SuchTrans.Models.Deliveryjob
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <h4>Deliveryjob</h4>
        <hr />
        @Html.HiddenFor(model => model.JobID)
        @Html.HiddenFor(model => model.DelID)
        @Html.HiddenFor(model => model.DriverID)
        @Html.HiddenFor(model => model.PortDelay)

        <div class="form-group">
            @Html.LabelFor(model => model.DelID, "DelID", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @*@Html.DropDownList("DelID", null, htmlAttributes: new { @class = "form-control" })*@
                @Html.TextBoxFor(model => model.DelID, new { disabled = "disabled" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TruckID, "TruckID", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @*@Html.DropDownList("TruckID", null, htmlAttributes: new { @class = "form-control" })*@
                @Html.TextBoxFor(model => model.TruckID, new { disabled = "disabled" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DriverID, "DriverID", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @*@Html.DropDownList("DriverID", null, htmlAttributes: new { @class = "form-control" })*@
                @Html.TextBoxFor(model => model.DriverID, new { disabled = "disabled" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.JobStatus, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @*@Html.EditorFor(model => model.JobStatus, new { htmlAttributes = new { @class = "form-control" } })*@
                @Html.DropDownListFor(model => model.JobStatus, new SelectList(new List<Object> {
                                                                                new {value="Delivered", text="Delivered"},
                                                                                new {value="En-route", text="En-route"},
                                                                                //new {value="Priority", text="Priority"},
                                                                                new {value="Waiting", text="Waiting"}
                                                                                },
                                                      "value", "text"))
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PortDelay, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @*@Html.EditorFor(model => model.PortDelay)*@
                    @Html.EditorFor(model => model.PortDelay)
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
