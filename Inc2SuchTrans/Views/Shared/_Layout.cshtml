                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Services <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li><a href=@Url.Action("Create","Quote")><i class="fa fa-adjust"></i> Request A Quotation</a></li>
                            <li><a href=@Url.Action("CreateFromSite","Delivery")><i class="fa fa-info-circle"></i> Book A Delivery</a></li>
                            <li><a href=@Url.Action("YourDeliveries","Delivery")><i class="fa fa-inbox"></i> View your Deliveries</a></li>
                            <li><a href=@Url.Action("DeliveryStatus","Delivery")><i class="fa fa-inbox"></i> Check Delivery Status</a></li>
                            <li class="divider"></li>
