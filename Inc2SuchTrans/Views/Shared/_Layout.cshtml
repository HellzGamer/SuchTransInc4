    <div class="container body-content" style="margin-top: 7%; width: 95%; margin-left: auto; margin-right: auto;">
        <div class="Block">
            @RenderBody()
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
