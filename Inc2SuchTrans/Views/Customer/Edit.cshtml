@model Inc2SuchTrans.Models.Customer
@{

}

            <h4 style="font-size:300%; text-decoration:underline; text-align:center;">Update Your Details</h4>
<div class="FilterDiv">

    @{ Html.RenderPartial("_Alerts"); }
