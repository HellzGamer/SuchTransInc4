                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" style="margin-left:auto; margin-right:auto; background-color:lightblue" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Your Profile", "Details")
    </div>
</div>
