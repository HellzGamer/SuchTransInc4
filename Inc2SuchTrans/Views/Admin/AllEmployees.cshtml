@model IEnumerable<Inc2SuchTrans.Models.Employee>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
            <h1 class="EveryHeader">Search For An Employee</h1>

@using (Html.BeginForm("YourDeliveries", "Delivery", FormMethod.Post))
{
    <div class="container FilterDivAdmin">
        <div class="row">
            <div class="search">
                <input type="text" class="form-control input-sm" id="refkey" name="refkey" maxlength="64" placeholder="Enter ID Number" />
                <button type="submit" class="btn btn-primary btn-sm">Search</button>
            </div>
        </div>

@{ Html.RenderPartial("_Alerts"); }


<table class="table table-bordered table-condensed DeliveryTable">
    <tr style="background-color:black; color:white;">
        <th>
            @Html.DisplayNameFor(model => model.EmployeeName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmployeeSurname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IDNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.PostalCode)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.Position)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ContactNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateCreated)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.LastModified)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.AspNetUsers.Email)
        </th>
        <th>

        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeSurname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IDNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.PostalCode)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Position)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContactNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateCreated)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.LastModified)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.AspNetUsers.Email)
            </td>
            <td>
                <div class="OrangeButton">
                    @Html.ActionLink("Details", "Details", new { id = item.EmployeeID }, new { @class = "OrangeButtonLink" })
                </div>
            </td>
        </tr>
    }


</table>
<p>
    <div class="OrangeButton">
        @Html.ActionLink("Register New Employee", "Register", "Employee", new { @class = "OrangeButtonLink" })
    </div>
</p>
    
    </div>
}
